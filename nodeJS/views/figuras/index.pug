extends ../layout

block content

  a.btn(role='button' href='/figuras/create') Crear

  table.table
    thead
      tr
        th(scope='col') ID
        th(scope='col') Marca
        th(scope='col') Color
        th(scope='col') Precio
        th(scope='col')
        th(scope='col')
    tbody
      each fig in figs
        tr
          td(scope='row')
            = fig.id
          td= fig.marca
          td= fig.color
          td= fig.precio 
          td
            a(href='figuras/' + fig.id + '/update') Editar
          td
            form.inline(method='post' action='figuras/' + fig.id + '/delete')
              input(type='hidden' name='id' value= fig.id)
              button.link-button(type='submit' name='submit_param' value='submit_value' class='btn') Eliminar
